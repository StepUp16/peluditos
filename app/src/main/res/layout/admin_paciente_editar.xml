<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Barra superior con flecha de retroceso y título -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/btn_back_desc"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEditarPacienteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_editar_paciente"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:fontFamily="@font/spline_sans"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <!-- Contenido principal desplazable -->
    <ScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvEditarPacienteTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Foto y datos básicos del paciente -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPacienteFoto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/paciente"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                android:contentDescription="Foto del paciente"
                tools:src="@drawable/paciente" />

            <TextView
                android:id="@+id/tvPacienteNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:fontFamily="@font/spline_sans"
                tools:text="Max" />

            <TextView
                android:id="@+id/tvPacienteEspecieRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/menu_Cliente_Admin_inactivo"
                android:fontFamily="@font/spline_sans"
                tools:text="Perro, Golden Retriever" />

            <TextView
                android:id="@+id/tvPacienteEdadSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:textColor="@color/menu_Cliente_Admin_inactivo"
                android:fontFamily="@font/spline_sans"
                tools:text="Edad: 5 años, Sexo: Macho" />

            <!-- Campos editables -->
            <!-- Nombre del Paciente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_nombre_paciente"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etNombrePaciente"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_nombre_paciente"
                android:padding="16dp"
                android:textColorHint="@color/menu_Cliente_Admin_inactivo"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"
                android:autofillHints="name"/>

            <!-- Especie -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_especie"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etEspecie"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_especie"
                android:padding="16dp"
                android:textColorHint="@color/menu_Cliente_Admin_inactivo"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:inputType="text"
                android:autofillHints="none"/>

            <!-- Raza -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_raza"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etRaza"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_raza"
                android:padding="16dp"
                android:textColorHint="@color/menu_Cliente_Admin_inactivo"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:inputType="text"
                android:autofillHints="none"/>

            <!-- Edad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_edad"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etEdad"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_edad"
                android:padding="16dp"
                android:textColorHint="@color/menu_Cliente_Admin_inactivo"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:inputType="number"
                android:autofillHints="none"/>

            <!-- Peso -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_peso"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etPeso"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_peso"
                android:padding="16dp"
                android:textColorHint="@color/menu_Cliente_Admin_inactivo"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:inputType="numberDecimal"
                android:autofillHints="none"/>

            <!-- Sexo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_sexo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <Spinner
                android:id="@+id/spinnerSexo"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_cliente"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="24dp"/>

            <!-- Cliente asociado-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_cliente_asociado"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <Spinner
                android:id="@+id/spinnerCliente"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_cliente"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="24dp"/>


            <!-- Botones Cancelar y Guardar Cambios -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">
                    <Button
                        android:id="@+id/btnCrearCita"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:background="@drawable/btn_green_bg"
                        app:backgroundTint="@null"
                        android:text="@string/btn_cancelar_paciente"
                        android:textColor="#081114"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        android:id="@+id/btnVerPacientes"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="3"
                        android:background="@drawable/btn_green_bg"
                        app:backgroundTint="@null"
                        android:text="@string/btn_guardar_cambios_paciente"
                        android:textColor="#081114"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Menú inferior fijo -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/navigationBarBackground"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Botón Clientes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconClientes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icono_perfil"
                app:tint="#638773" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_clientes"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="@font/spline_sans" />
        </LinearLayout>

        <!-- Botón Pacientes (activo) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconPacientes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icono_mascotas"
                app:tint="@color/textColorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_pacientes"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="@font/spline_sans" />
        </LinearLayout>

        <!-- Botón Citas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconCitas"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icono_citas"
                app:tint="#638773" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_citas"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="@font/spline_sans" />
        </LinearLayout>

        <!-- Botón Perfil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconPerfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icono_perfil"
                app:tint="#638773" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_perfil"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="@font/spline_sans" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>