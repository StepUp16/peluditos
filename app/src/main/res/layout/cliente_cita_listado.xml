<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondos_celular"
    tools:context=".ClienteCitaListadoActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.Peluditos.ClientToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="@string/title_cliente_citas"
        app:navigationIcon="@drawable/icono_cierre"
        app:navigationContentDescription="@string/btn_back_desc" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        style="@style/TabStyleCliente"
        android:background="@drawable/edittext_cliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_calendario" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_lista" />
    </com.google.android.material.tabs.TabLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/CustomCalendar"
        android:dateTextAppearance="@style/CalendarDateText"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

    <TextView
        android:id="@+id/tvHeaderHoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/header_hoy"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_goneMarginTop="16dp" />

    <HorizontalScrollView
        android:id="@+id/estadoFilterContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderHoy">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupEstados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEstadoTodos"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:checkable="true"
                android:checked="true"
                android:text="@string/cita_filter_todos"
                app:chipBackgroundColor="@color/mi_verde_primario"
                android:textColor="@color/textColorPrimary"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEstadoPendiente"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/cita_estado_pendiente"
                app:chipBackgroundColor="@color/estadoPendienteColor"
                android:textColor="@color/textColorPrimary"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEstadoConfirmada"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/cita_estado_confirmada"
                app:chipBackgroundColor="@color/estadoConfirmadaColor"
                android:textColor="@color/textColorPrimary"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEstadoPospuesta"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/cita_estado_pospuesta"
                app:chipBackgroundColor="@color/estadoPospuestaColor"
                android:textColor="@color/textColorPrimary"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEstadoCancelada"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/cita_estado_cancelada"
                app:chipBackgroundColor="@color/estadoCanceladaColor"
                android:textColor="@color/textColorPrimary"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEstadoCompletada"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/cita_estado_completada"
                app:chipBackgroundColor="@color/estadoCompletadaColor"
                android:textColor="@color/textColorPrimary" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCitas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/estadoFilterContainer"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_cita_cliente" />

    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="32dp"
        android:text="@string/text_cliente_citas_vacio"
        android:textColor="@color/texto_oculto"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewCitas"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewCitas"
        app:layout_constraintStart_toStartOf="@id/recyclerViewCitas"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewCitas"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabNuevaCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_solicitar_cita"
        android:contentDescription="@string/content_desc_add_cita_cliente"
        app:icon="@drawable/ic_add"
        app:backgroundTint="@color/mi_naranja_primario"
        app:iconTint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnMenuCliente" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnMenuCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/navigationBarBackground"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/selector_menu_cliente"
        app:itemTextColor="@color/selector_menu_cliente"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_cliente" />

</androidx.constraintlayout.widget.ConstraintLayout>
