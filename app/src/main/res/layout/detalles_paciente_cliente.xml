<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Barra superior -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Regresar"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/textColorPrimary" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles del paciente"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:fontFamily="@font/spline_sans"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <!-- Contenido principal con Scroll -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Imagen del paciente -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPacienteProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/paciente"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                android:contentDescription="Foto del paciente" />

            <!-- Nombre del paciente -->
            <TextView
                android:id="@+id/tvPacienteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Buddy"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:fontFamily="@font/spline_sans" />

            <!-- Tipo/Raza del paciente -->
            <TextView
                android:id="@+id/tvPacienteRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Perro: Golden Retriever"
                android:textColor="@color/textColorSecondary"
                android:textSize="16sp"
                android:fontFamily="@font/spline_sans" />

            <!-- Edad y Sexo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPacienteAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 años"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp"
                    android:fontFamily="@font/spline_sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Sexo: "
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp"
                    android:fontFamily="@font/spline_sans" />

                <TextView
                    android:id="@+id/tvPacienteSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Macho"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp"
                    android:fontFamily="@font/spline_sans" />

            </LinearLayout>

            <!-- Botón Editar -->
            <Button
                android:id="@+id/btnEditar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_cliente"
                android:text="Editar"
                android:textColor="#081114"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/spline_sans"
                app:backgroundTint="@null" />

            <!-- Información del Cliente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Información del Cliente"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/spline_sans" />

            <!-- Cliente Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivClienteProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cliente_sofia"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                    android:contentDescription="Foto del cliente" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvClienteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sofía Rodríguez"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:fontFamily="@font/spline_sans" />

                    <TextView
                        android:id="@+id/tvClientePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="+502 5555-1234"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/spline_sans" />

                </LinearLayout>

            </LinearLayout>

            <!-- Botones de navegación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnHistorialMedico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Historial Médico"
                    android:textAlignment="center"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="@font/spline_sans"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnCitasFuturas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Citas Futuras"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:fontFamily="@font/spline_sans"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnCitasPasadas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Citas Pasadas"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:fontFamily="@font/spline_sans"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Contenido del historial (por defecto) -->
            <LinearLayout
                android:id="@+id/historialContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Historial 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icono_citas"
                        app:tint="@color/textColorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 de Octubre, 2024"
                            android:textSize="14sp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="@font/spline_sans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Vacunación"
                            android:textSize="16sp"
                            android:textColor="@color/textColorSecondary"
                            android:fontFamily="@font/spline_sans" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Historial 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icono_citas"
                        app:tint="@color/textColorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 de Septiembre, 2024"
                            android:textSize="14sp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="@font/spline_sans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Consulta General"
                            android:textSize="16sp"
                            android:textColor="@color/textColorSecondary"
                            android:fontFamily="@font/spline_sans" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Historial 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icono_citas"
                        app:tint="@color/textColorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22 de Agosto, 2024"
                            android:textSize="14sp"
                            android:textColor="@color/textColorPrimary"
                            android:fontFamily="@font/spline_sans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Desparasitación"
                            android:textSize="16sp"
                            android:textColor="@color/textColorSecondary"
                            android:fontFamily="@font/spline_sans" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Menú inferior fijo -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/navigationBarBackground"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Botón Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icono_home"
                app:tint="@color/menu_Cliente_inactivo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/menu_Cliente_inactivo"
                android:fontFamily="@font/spline_sans" />
        </LinearLayout>

        <!-- Botón Citas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconCitas"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icono_citas"
                app:tint="@color/menu_Cliente_inactivo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Citas"
                android:textSize="12sp"
                android:textColor="@color/menu_Cliente_inactivo"
                android:fontFamily="@font/spline_sans" />
        </LinearLayout>

        <!-- Botón Pacientes (activo) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconPacientes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icono_mascotas"
                app:tint="@color/menu_Cliente_activo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pacientes"
                android:textSize="12sp"
                android:textColor="@color/menu_Cliente_activo"
                android:fontFamily="@font/spline_sans" />
        </LinearLayout>

        <!-- Botón Perfil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconPerfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icono_perfil"
                app:tint="@color/menu_Cliente_inactivo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Perfil"
                android:textSize="12sp"
                android:textColor="@color/menu_Cliente_inactivo"
                android:fontFamily="@font/spline_sans" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
