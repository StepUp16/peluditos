<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallePacienteClienteActivity"
    android:background="@color/fondos_celular">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        style="@style/Widget.Peluditos.ClientToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/icono_cierre"
        app:navigationContentDescription="@string/btn_back_desc"
        app:title="@string/title_detalle_paciente_cliente" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/fondos_celular"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="96dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@color/fondos_celular">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivPacientePhoto"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/paciente"
                            android:contentDescription="@string/content_desc_foto_paciente"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView" />

                        <ImageButton
                            android:id="@+id/btnCambiarFoto"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end|bottom"
                            android:layout_margin="6dp"
                            android:background="@drawable/btn_edit_bg"
                            android:contentDescription="@string/btn_cambiar_foto_paciente"
                            android:padding="8dp"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/texto_oculto_cliente" />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/photoProgress"
                            style="@style/Widget.MaterialComponents.CircularProgressIndicator.Small"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:visibility="gone" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvPacienteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/spline_sans"
                        android:textColor="@color/texto_oculto_cliente"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        tools:text="Buddy" />

                    <TextView
                        android:id="@+id/tvPacienteEspecie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/spline_sans"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="Perro - Golden Retriever" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/fondos_celular"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEdad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="false"
                            android:clickable="false"
                            android:backgroundTint="@color/fondos_celular"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/textColorPrimary"
                            tools:text="5 años" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPeso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="false"
                            android:clickable="false"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/textColorPrimary"
                            android:backgroundTint="@color/fondos_celular"
                            tools:text="12.5 kg" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSexo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="false"
                            android:clickable="false"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/textColorPrimary"
                            tools:text="Hembra"
                            android:backgroundTint="@color/fondos_celular"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/fondos_celular">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spline_sans"
                        android:text="@string/label_propietario_cliente"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivOwnerPhoto"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icono_perfil"
                            android:contentDescription="@string/content_desc_foto_usuario"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvOwnerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spline_sans"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="Sofía Rodríguez" />

                            <TextView
                                android:id="@+id/tvOwnerPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/spline_sans"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="14sp"
                                tools:text="Teléfono: +503 5555-1234" />

                            <TextView
                                android:id="@+id/tvOwnerEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/spline_sans"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="14sp"
                                tools:text="Correo: cliente@peluditos.com" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvUltimaActualizacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spline_sans"
                    android:background="@color/fondos_celular"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="14sp"
                    tools:text="Actualizado el 12 de noviembre, 10:35 AM" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Reemplazado: botón primario primero (btnProgramarCita) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProgramarCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/spline_sans_bold"
                android:text="@string/btn_programar_cita_cliente"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:backgroundTint="@color/mi_naranja_primario"
                app:cornerRadius="12dp"
                app:iconTint="@color/black" />

            <!-- Reemplazado: botón secundario después (btnVerHistorial) -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerHistorial"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/spline_sans_medium"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:text="@string/btn_ver_historial_cliente"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:iconTint="@color/textColorPrimary"
                app:strokeColor="@color/border_button"
                app:strokeWidth="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/spline_sans"
                android:text="@string/section_historial"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_cliente"
                app:tabIndicatorColor="@color/mi_naranja_primario"
                app:tabSelectedTextColor="@color/mi_naranja_primario"
                app:tabTextColor="@color/texto_oculto_cliente">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_historial_medico" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_citas_futuras" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_citas_pasadas" />
            </com.google.android.material.tabs.TabLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:listitem="@layout/item_historial_medico_timeline" />

            <TextView
                android:id="@+id/tvEmptyList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:fontFamily="@font/spline_sans"
                android:text="@string/empty_historial"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnMenuCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/navigationBarBackground"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/selector_menu_cliente"
        app:itemTextColor="@color/selector_menu_cliente"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_cliente" />

</androidx.constraintlayout.widget.ConstraintLayout>
