<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FF5722">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        style="@style/Widget.Peluditos.ClientToolbar"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="@string/menu_home" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/btnMenuCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvatarCliente"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/btn_edit_bg"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icono_perfil"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/txtMensajeBenvenida"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView" />

                <TextView
                    android:id="@+id/txtMensajeBenvenida"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/epilogue_bold"
                    android:text="@string/text_saludo_generico"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/imgAvatarCliente"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imgNotificacion"
                    app:layout_constraintHorizontal_bias="0"
                    tools:text="Hola, Sofía" />

                <ImageView
                    android:id="@+id/imgNotificacion"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="4dp"
                    android:background="@drawable/btn_edit_bg"
                    android:contentDescription="@string/menu_notificaciones"
                    app:srcCompat="@drawable/icono_notificacion"
                    app:tint="@color/textColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtParrafoBienvenida"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/epilogue"
                    android:text="@string/text_client_home_intro"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/txtMensajeBenvenida"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/navigationBarBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProximasCitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/epilogue_bold"
                    android:text="@string/section_proximas_citas"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtFechaCita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/epilogue"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            tools:text="22 de julio, 10:00 AM" />

                        <TextView
                            android:id="@+id/txtMotivoCita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/epilogue_bold"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="16sp"
                            tools:text="Consulta general para Max" />

                        <TextView
                            android:id="@+id/txtNombreDoctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/epilogue"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            tools:text="Dr. Martínez" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgCita"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="@string/menu_citas"
                        android:src="@drawable/icono_citas"
                        android:tint="@color/textColorPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/txtNotificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/epilogue_bold"
                    android:text="@string/section_notificaciones"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/navigationBarBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtRecordatorioVacuna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/epilogue_bold"
                            android:text="@string/text_recordatorio_vacunacion"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtProximaVacuna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp"
                            tools:text="Próxima vacuna para Luna en 2 semanas" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgRecordatorio"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="@string/menu_notificaciones"
                        android:src="@drawable/icono_alarm"
                        android:tint="@color/textColorPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnAgregarMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="#ED6E12"
                android:textColor="@color/textColorPrimary"
                android:text="@string/btn_agregar_mascota"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnSolicitarCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#ED6E12"
                android:textColor="@color/textColorPrimary"
                android:text="@string/btn_solicitar_cita"
                android:textAllCaps="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnMenuCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/navigationBarBackground"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/selector_menu_cliente"
        app:itemTextColor="@color/selector_menu_cliente"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_cliente" />

</androidx.constraintlayout.widget.ConstraintLayout>
