<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaCitaClienteActivity"
    android:background="@color/fondos_celular">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        style="@style/Widget.Peluditos.ClientToolbar"
        app:navigationIcon="@drawable/icono_cierre"
        app:navigationContentDescription="@string/btn_back_desc"
        app:title="@string/title_nueva_cita_cliente"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearCita"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="96dp">

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spline_sans"
                android:text="@string/text_cliente_cita_intro"
                android:textColor="@color/textColorSecondary"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/spline_sans"
                android:text="@string/label_paciente"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_cliente"
                android:padding="12dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/spline_sans"
                android:text="@string/label_cliente_asociado"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClienteActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_cliente"
                android:fontFamily="@font/spline_sans_bold"
                android:padding="16dp"
                android:text="@string/text_cliente_no_disponible"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                tools:text="Registrado como: Sofia Garcia" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/spline_sans"
                android:text="@string/label_fecha"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_cliente"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etFecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/spline_sans"
                    android:hint="@string/hint_fecha"
                    android:importantForAutofill="no"
                    android:inputType="none"
                    android:paddingStart="16dp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/textColorSecondary"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:clickable="true" />

                <ImageButton
                    android:id="@+id/btnPickFecha"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/cd_seleccionar_fecha"
                    android:src="@drawable/icono_citas"
                    android:padding="4dp"
                    app:tint="@color/textColorPrimary" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/spline_sans"
                android:text="@string/label_hora"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_cliente"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etHora"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/spline_sans"
                    android:hint="@string/hint_hora"
                    android:importantForAutofill="no"
                    android:inputType="none"
                    android:paddingStart="16dp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/textColorSecondary"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:clickable="true" />

                <ImageButton
                    android:id="@+id/btnPickHora"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/cd_seleccionar_hora"
                    android:src="@drawable/icono_alarm"
                    android:padding="4dp"
                    app:tint="@color/textColorPrimary" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/spline_sans"
                android:text="@string/label_motivo"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMotivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_cliente"
                android:fontFamily="@font/spline_sans"
                android:hint="@string/hint_motivo"
                android:inputType="textCapSentences"
                android:padding="16dp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/textColorSecondary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/spline_sans"
                android:text="@string/label_notas"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNotasAdicionales"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/edittext_cliente"
                android:fontFamily="@font/spline_sans"
                android:gravity="top|start"
                android:hint="@string/hint_notas_adicionales"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minLines="3"
                android:padding="16dp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/textColorSecondary"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCrearCita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/spline_sans_bold"
        android:text="@string/btn_solicitar_cita"
        android:textAllCaps="false"
        android:textColor="#171412"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/mi_naranja_primario" />

</androidx.constraintlayout.widget.ConstraintLayout>
