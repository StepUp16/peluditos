<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:gravity="center"
        android:fontFamily="@font/spline_sans_bold"
        android:text="@string/title_nuevo_paciente"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón fijo en el pie -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_marginTop="37dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarPaciente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="64dp"
            android:paddingEnd="24dp"
            android:paddingBottom="96dp">

            <!-- Título -->

            <!-- Nombre del Paciente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/label_nombre_paciente"
                android:fontFamily="@font/spline_sans"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Especie -->
            <EditText
                android:id="@+id/etNombrePaciente"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="name"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_nombre_paciente"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:fontFamily="@font/spline_sans"
                android:textColorHint="@color/textColorSecondary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/label_especie"
                android:fontFamily="@font/spline_sans"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEspecie"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="none"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_especie"
                android:fontFamily="@font/spline_sans"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="@color/textColorSecondary"
                android:textSize="18sp" />

            <!-- Raza -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/label_raza"
                android:fontFamily="@font/spline_sans"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRaza"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="none"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_raza"
                android:fontFamily="@font/spline_sans"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="@color/textColorSecondary"
                android:textSize="18sp" />

            <!-- Edad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/label_edad"
                android:fontFamily="@font/spline_sans"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEdad"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="none"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_edad"
                android:fontFamily="@font/spline_sans"
                android:inputType="number"
                android:padding="16dp"
                android:textColorHint="@color/textColorSecondary"
                android:textSize="18sp" />

            <!-- Peso -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/label_peso"
                android:fontFamily="@font/spline_sans"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPeso"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="none"
                android:background="@drawable/edittext_cliente"
                android:hint="@string/hint_peso"
                android:inputType="numberDecimal"
                android:fontFamily="@font/spline_sans"
                android:padding="16dp"
                android:textColorHint="@color/textColorSecondary"
                android:textSize="18sp" />

            <!-- Sexo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/label_sexo"
                android:fontFamily="@font/spline_sans"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerSexo"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edittext_cliente"
                android:padding="12dp"
                android:spinnerMode="dropdown" />

            <!-- Cliente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/label_cliente"
                android:fontFamily="@font/spline_sans"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerCliente"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edittext_cliente"
                android:padding="12dp"
                android:spinnerMode="dropdown" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnGuardarPaciente"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_cliente"
        android:text="@string/btn_guardar_paciente"
        android:fontFamily="@font/spline_sans"
        android:textColor="#171412"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <ImageView
        android:id="@+id/imgCierre"
        android:layout_width="26dp"
        android:layout_height="26dp"
        app:tint="@color/textColorPrimary"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:srcCompat="@drawable/icono_cierre" />
</androidx.constraintlayout.widget.ConstraintLayout>