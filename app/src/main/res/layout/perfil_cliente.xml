<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Barra superior -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/btn_back_desc"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/textColorPrimary" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_perfil"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:fontFamily="@font/spline_sans"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <!-- Contenido principal con Scroll -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Sección de Perfil -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivUserProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cliente_sofia"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                    android:contentDescription="@string/content_desc_foto_usuario" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/photoProgress"
                    style="@style/Widget.MaterialComponents.CircularProgressIndicator.Small"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnCambiarFoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="6dp"
                    android:background="@drawable/btn_edit_bg"
                    android:contentDescription="@string/btn_cambiar_foto_perfil"
                    android:padding="8dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/textColorPrimary" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sofía Rodríguez"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:fontFamily="@font/spline_sans" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sofía.Rodríguez@email.com"
                android:textColor="@color/textColorSecondary"
                android:textSize="16sp"
                android:fontFamily="@font/spline_sans" />

            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="+502 5555-1234"
                android:textColor="@color/textColorSecondary"
                android:textSize="16sp"
                android:fontFamily="@font/spline_sans" />

            <!-- Sección Mis Mascotas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Mis Mascotas"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/spline_sans" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMascotas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_paciente_cliente" />

            <TextView
                android:id="@+id/tvMascotasEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/text_cliente_mascotas_perfil_vacio"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp"
                android:visibility="gone"
                android:fontFamily="@font/spline_sans" />

            <!-- Sección Mis Citas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/title_cliente_citas"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/spline_sans" />

            <LinearLayout
                android:id="@+id/llCitasContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:dividerPadding="8dp" />

            <TextView
                android:id="@+id/tvCitasEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/text_cliente_citas_vacio"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp"
                android:visibility="gone"
                android:fontFamily="@font/spline_sans" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerCitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/btn_ver_citas_cliente"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="@font/spline_sans"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Sección Configuración -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Configuración"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/spline_sans" />

            <LinearLayout
                android:id="@+id/llChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icono_cambiar_password"
                    app:tint="@color/textColorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Cambiar Contraseña"
                    android:textSize="16sp"
                    android:fontFamily="@font/spline_sans" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/textColorPrimary" />
            </LinearLayout>
<!--
            <LinearLayout
                android:id="@+id/llNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icono_notificacion"
                    app:tint="@color/textColorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Notificaciones"
                    android:textSize="16sp"
                    android:fontFamily="@font/spline_sans" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/textColorPrimary" />
            </LinearLayout>
-->

            <!-- Botón Cerrar Sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/spline_sans_bold"
                android:text="@string/menu_logout"
                android:textColor="#081114"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/mi_naranja_primario" />

        </LinearLayout>
    </ScrollView>

    <!-- Menú inferior fijo -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnMenuCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/navigationBarBackground"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/selector_menu_cliente"
        app:itemTextColor="@color/selector_menu_cliente"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_cliente" />

</androidx.constraintlayout.widget.ConstraintLayout>
