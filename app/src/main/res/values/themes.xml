
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Peluditos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- esto apaga el color por defecto del elemento seleccionado -->
        <item name="colorSecondaryContainer">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigationBarBackground</item>
        <item name="colorPrimary">@color/textColorPrimary</item>
        <item name="android:statusBarColor">@color/fondos_celular</item>
        <!-- Configuración del Splash Screen usando biblioteca de compatibilidad -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Peluditos</item>
    </style>

    <style name="CustomTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/fondoActivo</item>
        <item name="tabTextColor">@color/selector_calendario</item>
        <item name="tabRippleColor">@color/estadoCompletadaColor</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="CustomCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Color del círculo del día seleccionado -->
        <item name="colorAccent">@color/mi_verde_primario</item>
        <!-- Color del texto del mes y año en la cabecera -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Color del texto de los días de la semana (L, M, M, etc.) -->
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <!-- Color del texto de los números de los días del mes -->
        <item name="android:textColor">@color/estadoConfirmadaColor</item>
    </style>

    <style name="Theme.Peluditos" parent="Base.Theme.Peluditos" />

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Peluditos.ClientToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/navigationBarBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="subtitleTextColor">@color/textColorSecondary</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Material3.TitleLarge</item>
    </style>
</resources>
